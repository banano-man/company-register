@model Firm_Register.Models.People

<form method="post" asp-action="Create">
    <div>
        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_First_Name"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Person_First_Name" placeholder="Въведете име">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_Last_Name"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Person_Last_Name" placeholder="Въведете фамилия">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_EGN"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Person_EGN" placeholder="Въведете ЕГН">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_Email"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Person_Email" placeholder="Въведете имейл">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_Password"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Person_Password" placeholder="Въведете парола">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label>Потвърдете парола</label>
            </div>
            <div class="col-6 text-left">
                <input type="password" placeholder="Потвърдете парола" name="confirm-password">
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-success">Регистрация</button>
                <br />
                Вече имате акаунт? <a asp-controller="SignIn" asp-action="Index">Влезте</a>
            </div>
        </div>
    </div>
</form>