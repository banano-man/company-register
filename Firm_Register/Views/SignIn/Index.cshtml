@model Firm_Register.Models.People

<form>
    <div>
        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_Email"></label>
            </div>
            <div class="col-6 text-left">
                <input type="text" placeholder="Въведете имейл" name="email">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Person_Password"></label>
            </div>
            <div class="col-6 text-left">
                <input type="password" placeholder="Въведете парола" name="password">
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-4 text-left">

                <a href="">Забравена парола?</a>
            </div>
            <div class="col-4 text-center">
                <button type="submit" class="btn btn-info">Влизане</button>
            </div>
            <div class="col-4 text-right">
                Нямате акаунт? <a asp-controller="SignUp" asp-action="Create">Регистрирайте се</a>
            </div>
        </div>
    </div>
</form>
